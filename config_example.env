
# Конфигурационный файл для бота автоответчика
# Скопируйте в .env и заполните своими данными

# ======================
# TELEGRAM BOT API
# ======================
# Получить у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ======================
# EMAIL НАСТРОЙКИ
# ======================
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_USERNAME=your_company@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# ======================
# GREEN API (WhatsApp)
# ======================
# Регистрация: https://green-api.com
# Получите Instance ID и API Token в личном кабинете
GREEN_API_INSTANCE_ID=1101000001
GREEN_API_TOKEN=d75b3a66374942c5b3c019c698abc2067e151558acbd412345

# ======================
# PYRUS CRM
# ======================
# Настройки для интеграции с Pyrus CRM
# Получите в настройках API вашего аккаунта Pyrus
PYRUS_LOGIN=your_login@company.com
PYRUS_SECURITY_KEY=your_pyrus_security_key
PYRUS_FORM_ID=12345

# ======================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ======================
# Режим отладки (true/false)
DEBUG=false

# Интервал проверки email в секундах
CHECK_INTERVAL=60

# ======================
# ОПЦИОНАЛЬНЫЕ НАСТРОЙКИ
# ======================
# Telegram User API (для отправки с личного аккаунта)
# TELEGRAM_API_ID=1234567
# TELEGRAM_API_HASH=abcdef1234567890abcdef1234567890
# TELEGRAM_PHONE_NUMBER=+79001234567
